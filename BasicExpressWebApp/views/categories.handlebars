{{#if user}}<div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Category ID</th>
        <th>Category Name</th>
    {{#if is_admin}}<a href="/categories/add">Add</a>{{/if}}
      </tr>
    </thead>
    <tbody>
      <tr>
        {{#categories}}
        <td>{{category_id}}</td>
        <td>{{category_name}}</td>
          {{#if is_admin}}<td><a href="/categories/edit/{{category_id}}">Edit</a>
          <a href="/categories/delete/{{category_id}}">Delete</a>
        </td>{{/if}}
        </tr>
        {{/categories}}
    </tbody>
  </table>
</div>
{{/if}}
