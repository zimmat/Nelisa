<div class="container">
  <h2>Products Table</h2>
  {{#if is_admin}}<a href="/products/add">Add a new product</a>{{/if}}
  <table class="table">
    <thead>
      <tr>
        <th>Product-Id</th>
        <th>Product Name</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        {{#products}}
        <td>{{product_id}}
        <td>{{product_name}}</td>
        {{#if ../is_admin}}  <td><a href="/products/edit/{{product_id}}">Edit</a>
          <a href="/products/delete/{{product_id}}">Delete</a></td>{{/if}}
        </tr>
        {{/products}}
    </tbody>
  </table>
</div>

</body>
