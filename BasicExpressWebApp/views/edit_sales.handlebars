<h1>Edit sales</h1>

<form action="/sales/update/{{data.sales_id}}" method="POST">
	<div class="">
		<label for="">Product</label>
		<select class="" name="product_id">
			{{#products}}
				<option {{selected}} value="{{data.product_id}}">{{product_name}}</option>
			{{/products}}
		</select>
	</div>
	<div class="">
		<label for="">Date</label>
		<input type="datetime-local" name="Sales_date" value="{{data.Sales_date}}">
		</div>
		  <label for="">Quantity</label>
		  <input type="number" name="quantity" value="{{data.quantity}}">
			</div>
		  <div>
		<label for="">Price</label>
		<input type="number" name="sales_price" value="{{data.sales_price}}">
		</div>
	<input type="submit">
</form>
