<div class="container">
  <h2>Sales Table</h2>
    {{#if is_admin}}<a href="/sales/add">Add new sales record</a>{{/if}}
  <table class="table">
    <thead>
      <tr>
        <th>Sales-Id</th>
        <th>Sales Date</th>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Sales Price</th>
        <th>Product-Id</th>
        {{#if is_admin}}<th>Admin_options</th>{{/if}}
      </tr>
    </thead>
    <tbody>
      {{#sales}}
        <tr>
          <td>{{sales_id}}</td>
          <td>{{Sales_date}}</td>
          <td>{{product_name}}</td>
          <td>{{quantity}}</td>
          <td>{{sales_price}}</td>
          <td>{{product_id}}</td>
          {{#if ../is_admin}}  <td> <a href="/sales/edit/{{sales_id}}">Edit</a>
              <a href="/sales/delete/{{sales_id}}">Delete</a>
            </td>{{/if}}
        </tr>
      {{/sales}}
    </tbody>
  </table>
</div>
</body>
