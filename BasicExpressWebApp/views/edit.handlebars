<h1>Edit product</h1>
<form action="/products/update/{{data.id}}" method="POST">
	<div class="">
		<label for="">Category</label>
		<select class="" name="category_id">
			{{#categories}}
				<option {{selected}} value="{{data.category_id}}">{{category_name}}</option>
			{{/categories}}
		</select>
	</div>
	<div class="">
		<label for="">Product Name</label>
		<input type="text" name="product_name" value="{{data.product_name}}">
	</div>
	<input type="submit">
</form>
