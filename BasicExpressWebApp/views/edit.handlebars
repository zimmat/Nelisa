<h1>Edit product</h1>

<form action="/products/update/{{data.id}}" method="POST">
	<div class="">
		<label for="">Category</label>
		<select class="" name="category_id">
			{{#categories}}
				<option {{selected}} value="{{category_id}}">{{cate}}</option>
			{{/categories}}
		</select>
	</div>
	<div class="">
		<label for="">Category Name</label>
		<input type="text" name="category_name" value="{{data.category_name}}">
	</div>
	<input type="submit">
</form>
