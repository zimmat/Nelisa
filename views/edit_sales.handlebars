<h1>Edit sales</h1>

<form action="/sales/update/{{data.id}}" method="POST">
	<div class="">
		<label for="">Category</label>
		<select class="" name="category_id">
			{{#categories}}
				<option {{selected}} value="{{category_id}}">{{category_name}}</option>
			{{/categories}}
		</select>
	</div>
	<div class="">
		<label for="">Date</label>
		<input type="datetime-local" name="Sales_date" value="{{Sales_date}}">
		</div>
			<div>
				<label for="">Product Name</label>
				<input type="text" name="product_name" value="{{product_name}}"></div>
		    <div>
		  <label for="">Quantity</label>
		  <input type="number" name="quantity" value="{{quantity}}">
			</div>
		  <div>
		<label for="">Price</label>
		<input type="number" name="sales_price" value="{{sales_price}}">
		</div>
	<input type="submit">
</form>
