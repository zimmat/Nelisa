<div class="jumbotron">
    <h1>Weekly Sales statistics</h1></div>
  <div>

    <div class="container">
      <h4><strong>Popularity Table</strong></h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Description</th>
            <th>Name</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          {{#popular}}
            <tr>
              <td>{{description}}</td>
              <td>{{name}}</td>
              <td>{{quantity}}</td>
            </tr>
          {{/popular}}
        </tbody>
      </table>

    </div>

    <div class="container">
      <h4><strong>Profit Table</strong></h4>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Description</th>
            <th>Name</th>
            <th>Profit</th>
          </tr>
        </thead>
        <tbody>
          {{#profit}}
            <tr>
              <td>{{description}}</td>
              <td>{{name}}</td>
              <td>{{profit}}</td>
            </tr>
          {{/profit}}
        </tbody>
      </table>

    </div>
